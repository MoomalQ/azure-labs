{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adSubnet": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the Windows Active Directory subnet"
            }        
        },
        "cloudAddressSpace": {
            "type": "string",
            "metadata": {
                "description": "The address space allocated to Azure as a whole"
            }
        },
        "dnsSettings": {
            "type": "array",
            "metadata": {
                "description": "The IP addresses of the DNS servers the firewall instance will use for DNS resolution"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The tags that will be associated to the resources"
            },
            "defaultValue": {
                "environment": "lab"
            }
        },
        "uniqueData": {
            "type": "string",
            "metadata": {
                "description": "Data used to append to resources to ensure uniqueness"
            },
            "defaultValue": "[substring(newGuid(),0,8)]"
        }
    },
    "variables": {
        "networkApiVersion": "2020-07-01",
        "location": "[resourceGroup().location]",
        "lzFwPolicyName": "[concat('fwpol',parameters('uniqueData'))]"
    },
    "resources": [
        {
            "name": "[variables('lzFwPolicyName')]",
            "type": "Microsoft.Network/firewallPolicies",
            "apiVersion": "[variables('networkApiVersion')]",
            "location": "[variables('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "dnsSettings": {
                    "servers": "[parameters('dnsSettings')]",
                    "enableProxy": "true"
                },
                "sku": {
                    "tier": "Standard"
                },
                "threatIntelMode": "Alert"
            },
            "resources": [
                {
                    "name": "DefaultDnatRuleCollectionGroup",
                    "type": "ruleCollectionGroups",
                    "apiVersion": "[variables('networkApiVersion')]",
                    "location": "[variables('networkApiVersion')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/firewallPolicies', variables('lzFwPolicyName'))]"
                    ],
                    "properties": {
                        "priority": 100,
                        "ruleCollections": [
                        ]
                    }
                },
                {
                    "name": "DefaultNetworkRuleCollectionGroup",
                    "type": "ruleCollectionGroups",
                    "apiVersion": "[variables('networkApiVersion')]",
                    "location": "[variables('networkApiVersion')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/firewallPolicies', variables('lzFwPolicyName'))]"
                    ],
                    "properties": {
                        "priority": 200,
                        "ruleCollections": [
                            {
                                "name": "AllowVmRequired",
                                "priority": 100,
                                "action": {
                                    "type": "Allow"
                                },
                                "rules": [
                                    {
                                        "name": "AllowKMSActivation",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "1688"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": [
                                            "kms.core.windows.net"
                                        ]
                                    }
                                ],
                                "ruleCollectionType": "FirewallPolicyFilterRuleCollection"
                            },
                            {
                                "name": "AllowAdClient",
                                "priority": 101,
                                "action": {
                                    "type": "Allow"
                                },
                                "rules": [
                                    {
                                        "name": "AllowADWS",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "9389"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowADGlbCat",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "3268-3269"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowLdap",
                                        "ipProtocols": [
                                            "TCP",
                                            "UDP"
                                        ],
                                        "destinationPorts": [
                                            "389"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowLdapSsl",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "636"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowRpcMapper",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "135"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowRpcDynamic",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "49152-65535"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowSmb",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "445"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowDns",
                                        "ipProtocols": [
                                            "TCP",
                                            "UDP"
                                        ],
                                        "destinationPorts": [
                                            "53"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowKerberos",
                                        "ipProtocols": [
                                            "TCP",
                                            "UDP"
                                        ],
                                        "destinationPorts": [
                                            "88"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowNtp",
                                        "ipProtocols": [
                                            "UDP"
                                        ],
                                        "destinationPorts": [
                                            "123"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowKerbChgSet",
                                        "ipProtocols": [
                                            "TCP",
                                            "UDP"
                                        ],
                                        "destinationPorts": [
                                            "464"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowNetbiosUdp",
                                        "ipProtocols": [
                                            "UDP"
                                        ],
                                        "destinationPorts": [
                                            "137-138"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    },
                                    {
                                        "name": "AllowNetbiosTcp",
                                        "ipProtocols": [
                                            "TCP"
                                        ],
                                        "destinationPorts": [
                                            "139"
                                        ],
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "destinationIpGroups": [],
                                        "destinationAddresses": [
                                            "[parameters('adSubnet')]"
                                        ],
                                        "ruleConditionType": "NetworkRuleCondition",
                                        "ruleType": "NetworkRule",
                                        "destinationFqdns": []
                                    }
                                ],
                                "ruleCollectionType": "FirewallPolicyFilterRuleCollection"
                            }
                        ]
                    }
                },
                {
                    "name": "DefaultApplicationRuleCollectionGroup",
                    "type": "ruleCollectionGroups",
                    "apiVersion": "[variables('networkApiVersion')]",
                    "location": "[variables('networkApiVersion')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/firewallPolicies', variables('lzFwPolicyName'))]",
                        "[concat('Microsoft.Network/firewallPolicies/', variables('lzFwPolicyName'), '/ruleCollectionGroups/', 'DefaultNetworkRuleCollectionGroup')]"
                    ],
                    "properties": {
                        "priority": 300,
                        "ruleCollections": [
                            {
                                "name": "AllowVmInternet",
                                "priority": 100,
                                "action": {
                                    "type": "Allow"
                                },
                                "rules": [
                                    {
                                        "name": "AllowVMInternet",
                                        "protocols": [
                                            {
                                                "protocolType": "Https",
                                                "port": 443
                                            },
                                            {
                                                "protocolType": "Http",
                                                "port": 80
                                            }
                                        ],
                                        "terminateTLS": false,
                                        "sourceAddresses": [
                                            "[parameters('cloudAddressSpace')]"
                                        ],
                                        "sourceIpGroups": [],
                                        "targetFqdns": [
                                            "*"
                                        ],
                                        "fqdnTags": [],
                                        "ruleType": "ApplicationRule"
                                    }
                                ],
                                "ruleCollectionType": "FirewallPolicyFilterRuleCollection"
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "outputs": {
        "firewallPolicyId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/firewallPolicies', variables('lzFwPolicyName'))]"
        }
    }
}
