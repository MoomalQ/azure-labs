                                "id": "[concat(variables('applicationGatewayId'), '/backendAddressPools/placeholder')]"
                            },
                            "backendHttpSettings": {
                                "id": "[concat(variables('applicationGatewayId'), '/backendHttpSettingsCollection/http_httpsetting')]"
                            }
                        }
                    }
                ],
                "enableHttp2": false,
                "probes": [],
